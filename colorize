[ ${BASH_VERSINFO[0]} -ge "4" ] || { echo "ERROR(8) bash 4 needed"; exit 8; }
[ $(sed --version | grep -c GNU) -gt 0 ] || { echo 'ERROR(9) GNU sed needed'; exit 9; }


function cc() {
	eval "$(echo -e "$*" | sed 's/^/echo -e "/; s/$/"/; s/<color=\([a-zA-Z]\{1,\}\)>/\\\\e[${color[\1]}m/g; s/<\/color>/\\\\e[${color[Clear]}m/g; s/$/\\\\e[${color[Clear]}m/')"
}

declare -A color=([Black]='0;30' [Red]='0;31' [Green]='0;32' [Orange]='0;33' [Brown]='0;33' [Yellow]='1;33' [Blue]='0;34' [Purple]='0;35' [Cyan]='0;36' [White]='0;37' [Clear]='0')
input="$@"
[ "$input" ] && cc $input || while IFS= read -r input
do	
	cc "$input"
done
